/*Cho mảng 1 chiều các số nguyên. Viết hàm tính tổng các số chẵn trong mảng bằng phương pháp đệ quy*/

#include<iostream>
using namespace std;
void nhap(int a[], int n) {
	 for (int i = 0; i < n; i++) {
		 cout << "Nhap vao phan tu a[" << i << "] : ";
		 cin >> a[i];
	 }
}

void xuat(int a[], int n) {
 for (int i = 0; i < n; i++)
 cout << a[i] << "  ";
}

int tinhtongchan(int a[], int n){
		if(n==0)
			return -1;
		else{
			if(a[n-1] % 2 == 0){
			return tinhtongchan(a,n-1) + a[n-1];
			return tinhtongchan(a,n-1);
			}
			else 
				return 0;
		
		}
}
int main(){
	 int a[50];
	 int n;
	 
	 cout << "Nhap n: ";
	 cin >> n;
	 
	 nhap(a, n);
	 cout << "mang cua nhap la: \n" << endl;
	 xuat(a,n);
   	 cout << "\ntong chan: " << tinhtongchan(a,n-1) << endl;
	 return 0;
}
